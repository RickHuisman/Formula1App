<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@drawable/navigation_bar_icon</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorAlertDialogListItem">#DEFFFFFF</item>
        <item name="android:titleTextAppearance">@font/raleway_bold</item>
    </style>

    <style name="TextTitle">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="TextRegularBody">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextHeader">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabItem</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="TabItem" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/raleway_extra_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
