<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/round_text_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/circle_active"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:text="1"
        android:textAppearance="@style/TextRegularBody2"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_view"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:background="#9CAAD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/round_text_view"
        app:layout_constraintStart_toStartOf="@+id/round_text_view"
        app:layout_constraintTop_toBottomOf="@+id/round_text_view" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/race_details_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/round_text_view"
        app:layout_constraintTop_toTopOf="@+id/round_text_view">

        <TextView
            android:id="@+id/race_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Race name"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextHeader"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/circuit_map_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/circuit_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:text="Circuit name"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextRegularBodyItalic"
            android:textColor="#8AFFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/circuit_map_image_view"
            app:layout_constraintStart_toStartOf="@+id/race_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/race_name_text_view" />

        <TextView
            android:id="@+id/race_winner_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Race winner"
            android:textAllCaps="true"
            android:textAppearance="@style/TextBodyBold"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/circuit_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/circuit_name_text_view"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/race_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="20 sept - 15:10"
            android:textAppearance="@style/TextRegularBodyItalic"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/race_winner_text_view"
            app:layout_constraintTop_toBottomOf="@+id/race_winner_text_view" />

        <ImageView
            android:id="@+id/circuit_map_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>